{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "checkJs": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework",
      "expect-webdriverio"
    ]
  },
  "include": ["src/**/*", "src/cjs/package.json"],
  "ignore": ["node_modules", "dist", "test"]
}
